@import '../main'

.recruitment
  &__baner
    width: 100%
    height: 823px
    background-repeat: no-repeat
    background-size: cover
    background-position: center center
    margin-top: -1px

  &__introduce
    &-title
      font-size: 24px
      text-transform: uppercase
      text-align: center
      color: #003663
      margin: 50px 0
      font-weight: 400

    &-content
      font-size: 18px

      span
        display: block

  &__see-more
    cursor: pointer
    margin-top: 25px

    h3
      height: 35px
      width: 100%
      text-align: center
      font-size: 18px
      color: #fff
      line-height: 35px
      width: 145px
      margin: auto
      font-weight: 400

      &:after
        content: ""
        background-image: url(../../../public/img/arrow-white.png)
        background-repeat: no-repeat
        background-size: contain
        width: 14px
        height: 8px
        transition: .3s
        display: inline-block
        vertical-align: middle
        margin-left: 5px

      &.rotate
        &:after
          transform: rotate(180deg)

  &__feel
    &-title
      font-size: 24px
      color: #003663
      text-align: center
      text-transform: uppercase
      margin-top: 40px

    &-avt
      width: 200px
      height: 200px
      border-radius: 50%
      background-size: cover
      background-repeat: no-repeat
      background-position: center center
      margin: auto auto
      z-index: 4
      position: inherit
      top: 100px
      border: 5px #fff solid

    &-item
      position: relative
      margin-top: -70px
      width: 33.33%
      padding: 10px

    &-content
      background-color: #f4f4f4
      padding-top: 105px
      heightContent = 100%
      height: "calc(%s - 200px)" % heightContent

    &-name
      text-align: center
      font-size: 16px
      text-transform: uppercase
      font-weight: 500
      margin: 10px 0

    &-job
      text-align: center
      color: #c1c1c1
      font-size: 14px
      margin-bottom: 10px

    &-detail
      padding: 0 15px 15px
      font-size: 18px
      text-align: justify

  &__news
    margin-left: 0
    margin-right: 0

    &-title
      font-size: 24px
      color: #003663
      text-align: center
      text-transform: uppercase
      margin-top: 60px
      font-weight: 400

    &--item
      height: 190px
      background-size: cover
      background-repeat: no-repeat
      margin-top: 40px

      &-content
        margin-top: 40px

      &-title
        font-size: 16px
        text-transform: uppercase
        margin-top: 0
        margin: 10px 0

      &-time
        color: #b3b3b3
        font-size: 14px
        margin: 10px 0

      &-description
        font-size: 18px

    & .btn
      font-size: 18px
      padding: 9px 59px
      margin-top: 10px

  & .news,
  & .oll-news
    color: #b3b3b3
    font-size: 16px
    text-transform: uppercase

  &__footer
    padding: 30px 0

  & .news
    h3
      text-align: right
      position: relative
      cursor: pointer
      font-weight: 500

      &:after
        content: ""
        background-image: url(../../../public/img/arrow-grey-right.png)
        background-repeat: no-repeat
        background-size: contain
        width: 15px
        height: 15px
        display: inline-block
        vertical-align: -5px
        margin-left: 10px

  & .oll-news
    h3
      position: relative
      padding-right: 20px
      cursor: pointer
      font-weight: 500

      &::before
        content: ""
        background-image: url(../../../public/img/arrow-grey.png)
        background-repeat: no-repeat
        background-size: contain
        width: 15px
        height: 15px
        display: inline-block
        vertical-align: -5px
        margin-right: 10px

  @media screen and (max-width: 991px)
    &__baner
      height: 465px

    &__feel
      &-avt
        width: 170px
        height: 170px

      &-item
        width: 50%

      &-content
        heightContent = 100%
        height: "calc(%s - 170px)" % heightContent

    &__news
      & .btn
        padding: 5px 35px
        margin-top: 10px

      &--item
        background-origin: content-box
        height: 220px

  @media screen and (max-width: 767px)
    &__baner
      height: 185px

    &__introduce
      &-title
        font-size: 18px

      &-content
        font-size: 14px

    &__see-more
      h3
        font-size: 14px

        &:after
          width: 10px
          height: 10px
          margin-left: 112px

    &__feel
      &-item
        width: 100%
        padding: 0 15px

      &-title
        font-size: 18px

      &-name
        font-size: 14px
        margin: 10px auto

      &-job
        margin: 10px auto

      &-detail
        font-size: 14px

    &__news
      &--item
        background-origin: content-box
        padding: 0

        &-content
          margin-top: 20px

        &-description
          font-size: 14px

      &-title
        font-size: 18px

      & .btn
        margin-top: 10px
        padding: 10px
        width: 100%
        font-size: 16px