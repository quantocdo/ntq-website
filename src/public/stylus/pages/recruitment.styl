@import '../main'

.recruitment
  &__baner
    width: 100%
    height: 823px
    background-repeat: no-repeat
    background-size: cover
    background-position: center center
    margin-top: -1px

  &__introduce
    &-title
      font-family: robotoRegular
      font-size: 24px
      text-transform: uppercase
      text-align: center
      color: #003663
      margin: 50px 0
      font-weight: 400

    &-content
      font-family: robotoRegular
      font-size: 18px

      span
        display: block

  &__see-more
    cursor: pointer

    h3
      height: 35px
      width: 100%
      text-align: center
      font-family: robotoRegular
      font-size: 18px
      color: #fff
      line-height: 35px
      width: 145px
      margin: auto
      font-weight: 400

      &:after
        content: ""
        background-image: url(../../../public/img/arrow-white.png)
        background-repeat: no-repeat
        background-size: contain
        width: 12px
        height: 7px
        display: block
        margin-top: -21px
        margin-left: 120px
        transition: .3s

      &.rotate
        &:after
          transform: rotate(180deg)

  &__feel
    display: flex
    flex-wrap: wrap

    &-title
      font-size: 24px
      font-family: robotoRegular
      color: #003663
      text-align: center
      text-transform: uppercase
      font-weight: 200
      margin-top: 40px

    &-avt
      width: 200px
      height: 200px
      border-radius: 50%
      background-size: cover
      background-repeat: no-repeat
      background-position: center center
      margin: auto auto
      z-index: 4
      position: inherit
      top: 100px
      border: 5px #fff solid

    &-item
      position: relative
      margin-top: -70px

    &-content
      background-color: #f4f4f4
      padding-top: 105px
      height: calc(100% - 200px)

    &-name
      text-align: center
      font-size: 16px
      font-family: robotoBold
      text-transform: uppercase

    &-job
      text-align: center
      color: #c1c1c1
      font-size: 14px
      font-family: robotoRegular
      font-weight: 200

    &-detail
      padding-right: 15px
      padding-left: 15px
      font-size: 18px
      font-family: robotoRegular
      font-weight: 200
      text-align: justify
      margin-bottom: 30px

  &__news
    margin-left: 0
    margin-right: 0

    &-title
      font-size: 24px
      font-family: robotoRegular
      color: #003663
      text-align: center
      text-transform: uppercase
      margin-top: 60px
      font-weight: 400

    &--item
      height: 180px
      background-size: cover
      background-repeat: no-repeat
      margin-top: 40px

      &-content
        margin-top: 40px

      &-title
        font-size: 16px
        font-family: robotoBold
        text-transform: uppercase
        margin-top: 0

      &-time
        color: #b3b3b3
        font-family: robotoRegular
        font-size: 14px

      &-description
        font-family: robotoRegular
        font-size: 18px

    & .btn
      font-size: 18px
      padding: 9px 59px
      font-weight: 200
      margin-top: 3px

  & .news,
  & .oll-news
    color: #b3b3b3
    font-family: robotoRegular
    font-size: 16px
    text-transform: uppercase

  & .news
    h3
      text-align: right
      position: relative
      padding-right: 20px
      cursor: pointer

      &:after
        content: ""
        background-image: url(../../../public/img/arrow-grey-right.png)
        background-repeat: no-repeat
        background-size: contain
        width: 15px
        height: 15px
        display: block
        margin-top: -16px
        margin-left: 77px
        position: absolute
        right: 0

  & .oll-news
    h3
      position: relative
      padding-right: 20px
      margin-left: 9px
      cursor: pointer

      &::before
        content: ""
        background-image: url(../../../public/img/arrow-grey.png)
        background-repeat: no-repeat
        background-size: contain
        position: absolute
        top: 23px
        width: 15px
        height: 15px
        display: block
        margin-top: -16px
        margin-left: -23px

  @media screen and (max-width: 991px)
    &__baner
      height: 465px

    &__feel
      &-avt
        width: 170px
        height: 170px

      &-content
        height: calc(100% - 180px)

    &__news
      & .btn
        padding: 0px 35px
        margin-top: 0

      &--item
        background-origin: content-box

  @media screen and (max-width: 767px)
    &__baner
      height: 185px

    &__introduce
      &-title
        font-size: 18px

      &-content
        font-size: 14px

    &__see-more
      h3
        font-size: 14px

        &:after
          width: 10px
          height: 10px
          margin-left: 112px

    &__feel
      &-title
        font-size: 18px

      &-name
        font-size: 14px
        margin: 10px auto

      &-job
        margin: 10px auto

      &-detail
        font-size: 14px

    &__news
      &--item
        background-origin: content-box

        &-content
          margin-top: 20px

        &-description
          font-size: 14px

      &-title
        font-size: 18px

      & .btn
        padding: 5px 0
        width: 100%
        font-size: 16px