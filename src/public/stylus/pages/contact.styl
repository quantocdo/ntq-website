@import '../main'

.page-header
	background-image url('~img/bg/contact.jpg')

.page-content
	background $color_gray_light

	.explain
		margin-top 18px
		line-height $text_paragraph_line_height

	.section-form
		padding-bottom 75px

		.form
			margin-top 62px

			.line
				padding-bottom 16px

			input
			textarea
				border-radius: 4px
				border: 1px solid $color_gray
				width: 100%
				display: block

			input
				line-height 42px
				padding 0 18px

			textarea
				line-height $text_paragraph_line_height
				padding 8px 18px
				resize vertical

			.button-submit
				background $color_blue
				border-radius 4px
				border none
				padding 0 30px
				height 42px

	.section-address
		background $color_white
		padding-top 55px
		padding-bottom 40px

		.heading
			font-size 20px

		.address
			line-height ($text_paragraph_line_height + 2)
