@import '../main'

.home
  color: #003663
  margin-top: -111px
	background-color green

.home__banner
	position: relative
	height: 100vh
	
.home__banner-background
	filter: brightness(85%)
	-ms-filter: brightness(85%)
	height: 100%
	
	video
		width: 100%
		height: 100%
		object-fit: cover
		
.home__banner-content
	width: 1000px
	position: absolute
	bottom: 90px
	left: 50%
	transform: translateX(-50%)
	color: #fff

	h3
		text-transform: uppercase
		font-family: robotoMedium
		font-weight: 400
		letter-spacing: 1.5px
		margin: 20px 0
		font-size: 40px

	h4
		font-family: robotoLight
		font-weight: 300
		letter-spacing: 3px
		margin: 20px 0
		font-size: 46px
		
.home__heading
	margin-bottom: 40px
	width: 85%

	h3
		font-family: kozukaGothicBold
		font-size: 30px
		text-transform: uppercase

	p
		font-family: kozukaGothicRegular
		font-size: 18px

.home__intro
	background: url("../images/bg-intro.png") no-repeat right center
	background-size: contain
	margin-top: -6px
	padding: 60px 0 70px

	.home__heading
		p
			width: 800px

	.row
		margin-top: 60px

	iframe
		width: 100%
		height: 444px
		border: 20px solid #000
		border-radius: 8px
		box-shadow: 15px 0 20px rgba(black, 0.5), 30px 20px 30px rgba(black, 0.2)

	.btn
		width: 225px
		margin-top: 140px
		margin-left: 40px

.home__intro-video img
  width: 100%

.home__box
	background: url("../images/bg-earth.png") no-repeat right 400px
	padding: 60px 0

.home__reason
	margin-bottom: 60px

.home__reason-list
	list-style: none

.home__reason-item
	display: flex
	align-items: center
	border-bottom: 1px solid #acacac
	padding: 40px 0

	&:first-child
		padding: 0 0 40px

	&:last-child
		border-bottom: none

	a
		width: 55%
		font-family: kozukaGothicRegular
		font-size: 18px
		transition: none

		&:hover
			font-weight: 600

.home__reason-img-wrapper
	width: 35%
	text-align: center
	margin-right: 10%

.home__reason-slide
	a
		display: block
		width: 100%
		height: 600px
		background-repeat: no-repeat
		background-position: center center
		background-size: cover

	.slick-dots
		bottom: -35px

		li
			margin: 0

			button:before
				font-size: 11px

			&.slick-active
				button:before
					color: #003663
					opacity: 1

.home__service
	margin-bottom: 60px

	.row
		margin-left: 0
		margin-right: 0

.home__service-items
	margin-bottom: 40px

.home__service-item
	text-align: center
	padding: 20px 15px

	.home__service-img-wrapper
		width: 100%
		height: 260px
		background-repeat: no-repeat
		background-position: center center
		background-size: contain

	h4
		font-family: kozukaGothicRegular
		font-size: 18px
		font-weight: 600
		margin: 25px 0 5px
		letter-spacing: 1.5px

	p
		font-family: kozukaGothicRegular
		font-size: 14px
		margin: 5px 0

	a
		font-family: kozukaGothicRegular
		font-size: 16px
		text-decoration: underline
		display: inline-block
		margin-top: 10px

.home__service-icon
	text-align: center
	padding: 15px

	.home__service-img-wrapper
		background-color: #003663
		border-radius: 50%
		width: 100px
		height: 100px
		margin: 0 auto
		position: relative

		img
			position: absolute
			top: 50%
			left: 50%
			transform: translate(-50%, -50%)

	p
		font-family: kozukaGothicRegular
		font-size: 14px
		margin-top: 20px

.home__customer
	margin-bottom: 40px

	.home__heading
		text-align: center
		margin: 0 auto 50px

	.row
		margin-left: 0
		margin-right: 0

.home__customer-item
	text-align: center
	padding: 30px 50px

	&:nth-child(2), &:nth-child(3)
		background-color: #f4f4f4

	h4
		font-family: kozukaGothicRegular
		font-size: 18px
		margin-bottom: 0

	p
		font-family: kozukaGothicRegular
		font-weight: 500

		&:first-of-type
			font-size: 16px
			font-style: italic
			margin: 10px 0 30px

		&:last-of-type
			font-size: 14px
			text-align: left

.home__customer-img-wrapper
	border-radius: 50%
	width: 200px
	height: 200px
	margin: 0 auto
	overflow: hidden

.home__tech
	text-align: center
	background: url("../images/bg-technology.png") no-repeat center center
	background-size: cover
	padding: 40px 0 50px

	.home__heading
		margin: 0 auto 60px

		h3
			margin: 20px 0

	.btn
		width: 330px

.home__tech-list
	list-style: none
	margin-top: 60px
	display: flex
	flex-wrap: wrap
	align-items: center
	justify-content: space-around

	li
		filter: grayscale(100%)
		-ms-filter: grayscale(100%)
		transition: .3s
		width: 17%
		padding: 20px 50px

		img
			width: 100%

		&:nth-child(5)
			img
				width: 60%

		&:hover
			filter: none
			-ms-filter: none

.home__suppliers
	text-align: center
	padding-top: 40px

	.home__heading
		margin: 0 auto 60px

		h3
			margin: 20px 0

	img
		width: 100%

.home__rnd
	text-align: center
	padding: 50px 0 70px
	position: relative

	.home__heading
		margin: 0 auto 160px
		color: #fff

		h3
			margin: 20px 0

    .btn
      width: 355px

.home__rnd-background
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	background-image: url("../images/item-rnd-2.png")
	background-repeat: no-repeat
	background-position: center 56%
	background-size: cover
	filter: brightness(45%)
	-ms-filter: brightness(45%)
	z-index: -1

.home__rnd-slide
	margin-top: 180px

	a
		display: inline-block
		width: 180px
		height: 120px
		margin: 0 20px
		background-repeat: no-repeat
		background-position: center 56%
		background-size: cover

.home__news
	padding: 30px 0 60px

	.container
		position: relative

	.home__btn-view-more
		position: absolute
		top: 40px
		right: 15px
		color: #003663
		font-family: kozukaGothicMedium
		font-size: 16px
		text-transform: uppercase

.home__news-item
	display: flex
	border-bottom: 1px dashed #003663
	font-size: 14px
	font-family: robotoRegular
	color: #003663

	p
		margin: 17px 0
		width: 15%

	a
		display: inline-block
		margin: 17px 0
		transition: none
		width: 85%

		&:hover
			font-weight: 600

	&:first-child
		border-top: 1px dashed #003663

.home__news-img-wrapper
	height: 263px
	background-repeat: no-repeat
	background-size: cover
	background-position: center

@media (min-width: 992px) and (max-width: 1199px)
	.home__banner-content
		width: 880px

		h3
			font-size: 36px

		h4
			font-size: 42px

	.home__intro
		background-size: cover
		padding: 40px 0 60px

		.home__heading
			p
				width: 600px

		iframe
			height: 370px

		.btn
			margin-top: 110px
			margin-left: 30px

	.home__box
  padding: 50px 0

	.home__reason
		margin-bottom: 50px

  .home__reason-item
    padding: 30px 0

    &:first-child
      padding: 0 0 30px

  .home__reason-slide
		a
    	height: 550px

    .slick-dots
      width: 94%

	.home__service
		margin-bottom: 50px

  .home__service-items
    margin-bottom: 30px

	.home__tech .btn
		width: 330px

  .home__tech-list li
    padding: 20px 40px

	.home__rnd
		padding: 40px 0 60px

		.home__heading
			margin: 0 auto 130px

  .home__rnd-slide
    margin-top: 150px

    a
      width: 150px
      height: 90px
      margin: 0 10px

	.home__news-item
    p
      margin: 12px 0
      width: 15%

    a
      display: inline-block
      margin: 12px 0
      width: 85%

  .home__news-img-wrapper
    height: 212px