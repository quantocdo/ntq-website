@import '../main'

.about-us
	& .masthead-wrapper
		& p
			color: #fff
			font-size: 72px
			line-height: 254px
			margin: 0

	&__content
		padding-left: 60px
		padding-right: 60px

	& .text-center
		color: #003663
		text-align: center

	&__strategic
		background-color: #f4f4f4
		padding: 60px 0 30px

		&--title
			font-size: 36px
			margin-top: -15px
			margin-bottom: 0

		.line
			height: 3px
			width: 25%
			background-color: #003663
			margin: 40px auto

		&--item
			&-title
				font-size: 50px

			&-total
				font-size: 36px
				margin-bottom: 20px

			&-policy
				margin-top: 0
				margin-bottom: 40px
				font-size: 24px

			&-detail
				color: #003663
				position: relative
				font-size: 18px
				padding: 8px 0
				line-height: 26px

				&:before
					content: ""
					background-image: url(../../../public/img/tick-blue-icon.png)
					background-repeat: no-repeat
					left: -30px
					top: 13px
					height: 20px
					width: 20px
					position: absolute

			&-description
				margin: auto auto
				padding-left: 15px
				padding-right: 15px
			
	&__introduce
		padding-top: 50px

	&__introduce-title
		font-size: 24px
		color: #003663
		margin-bottom: 10px
		line-height: 26px

	&__info
		background-repeat: no-repeat
		background-position: center right
		background-size: 35%

		&:first-child
			margin-top: -96px

			& .about-us__introduce-title
				padding-top: 100px

		&-item
			margin: 22px auto
			display: block
			line-height: 24px

		&-name
			font-weight: 500
			width: 160px
			font-size: 16px
			text-shadow: 0 0 1px #fff

		&-detail
			font-size: 16px
			text-shadow: 0 0 1px #fff

		table
			margin-bottom: 20px

	& .icon-sales
		&:before
			content: ""
			background-image: url(../../../public/img/sales-icon.png)
			background-repeat: no-repeat
			top: 8px
			left: 100px
			width: 65px
			height: 52px
			display: inline-block
			margin-right: 30px
			vertical-align: -4px

	& .icon-talen
		&:before
			content: ""
			background-image: url(../../../public/img/talen-icon.png)
			background-repeat: no-repeat
			top: 8px
			left: 100px
			width: 65px
			height: 52px
			display: inline-block
			margin-right: 30px
			vertical-align: -4px

	&__means
		&-title
			font-size: 24px
			color: #003663
			text-align: center
			margin-top: 40px

		&-detail
			padding-left: 60px
			padding-right: 60px
			margin-top: 60px
			display: flex
			align-items: center

		&-description
			padding-left: 40px
			font-size: 18px

			p
				line-height: 30px

		&-logo
			background-color: #f4f4f4
			width:190px
			height: 190px
			display: flex
			justify-content: center
			align-items: center

			img
				padding-left: 10px
				padding-right: 10px

	&__admin
		&-title
			font-size: 24px
			text-align: center
			margin-top: 40px
			color: #003663

		&--wrapper
			display: flex
			flex-wrap: wrap
			align-items: center
			justify-content: space-around
			margin: 40px -10px

		&-item
			width: 18%
			height: 270px
			position: relative
			background-repeat: no-repeat
			background-size: 70%
			background-position: center 32px
			border-radius: 16px
			background-color: #f4f4f4
			margin: 10px

		&-content
			position: absolute
			bottom: 0
			width 100%
			padding: 10px 15px;
			background-image: linear-gradient(90deg, #11bdbd, #b0e04e 85%)
			color: #fff
			border-radius: 0 0 16px 16px
			line-height: 22px

			h4
				font-size: 17px
				line-height: 26px

			p
				font-size: 13px
				line-height: 22px

	@media screen and (min-width: 992px) and (max-width: 1199px)
		&__admin-item
			width: 22%

	@media screen and (min-width: 768px) and (max-width: 991px)
		& .masthead-wrapper
			& p
				font-size: 60px
				text-align: center

		&__strategic
			.line
				width: 30%

		&__info
			background: none !important

		&__admin-item
			width: 30%
			height: 280px

	@media screen and (max-width: 767px)
		&__info
			background: none !important

			tr
				margin: 15px auto

			&-name
				display: none

			&-detail:before
				content: attr(data-title)
				font-size: 16px
				font-weight: 500
				display: block
				margin-bottom: 3px

		& .masthead-wrapper
			& p
				line-height: 154px

		& .masthead-wrapper
			& p
				font-size: 36px
				text-align: center

		&__content
			padding: 0 30px

		&__strategic
			.col-sm-6:last-child
				.about-us__strategic--item-title
					margin-top: 45px

			.line
				margin: 30px auto

		&__means
			&-detail
				display: block
				padding: 0

			&-logo
				margin: 0 auto

			&-description
				padding-left: 0
				margin-top: 30px

		&__admin
			&-item
				width: 47%
				height: 310px
				margin: 6px

	@media screen and (max-width: 479px)
		&__strategic
			&--title
				font-size: 24px

			&--item
				&-title
					font-size: 40px

				&-total
					font-size: 24px

				&-policy
					font-size: 16px

				&-detail
					font-size: 14px

		& .icon-sales
			&:before
				content: ""
				background-image: url(../../../public/img/sales-icon.png)
				background-repeat: no-repeat
				top: 8px
				left: 103px
				width: 48px
				background-size: contain
				display: inline-block
				margin-right: 20px
				vertical-align: -18px

		& .icon-talen
			&:before
				background-image: url(../../../public/img/talen-icon.png)
				background-repeat: no-repeat
				top: 8px
				left: 103px
				width: 48px
				background-size: contain
				display: inline-block
				margin-right: 20px
				vertical-align: -13px

		& .address:nth-child(1)
			background-image: url(../../../public/img/sudico-building-mobile.png)
			margin-right: -15px
			background-size: auto

		& .address:nth-child(2)
			background-image: url(../../../public/img/vv-building-mobile.jpg)
			margin-right: -15px
			background-size: auto

		&__admin
			&-item
				width: 100%
				height: 340px

			&-content
				h4
					font-size: 20px
					line-height: 30px