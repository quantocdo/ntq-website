@import '../main'

.download
	& .masthead-wrapper
		& p
			color: #fff
			font-size: 72px
			line-height: 255px
			margin: 0

	&__item
		&-content
			width: 85%
			display: inline-flex
			line-height: 22px
	
	&__content
		padding-left: 60px
		padding-right: 60px

		&--item
			width: 50%
			padding: 15px

			&-title
				height: 115px
				display: flex
				align-items: center
				color: #fff
				padding-left: 40px
				padding-right: 40px

				h3
					font-size: 20px
					letter-spacing: 1.2px
					line-height: 28px

			&-detail
				ul
					margin-top: 30px
					margin-bottom: 30px

					li
						padding: 0 40px
						margin: 15px 0
						font-size: 16px
						cursor: pointer
						position: relative

						&:before
							content: ''
							display: inline-block
							width: 10px
							height: 14px
							background: url(../../../public/img/icon-note.png) no-repeat center center
							background-size: 100%
							vertical-align: -1px
							margin-right: 5px

							& .download__item-content
								width: 85%
								display: inline-flex

	&__description
		color: #13416a
		font-size: 18px
		line-height: 26px

		&:first-child
			margin: 50px 0 30px

		&:nth-child(2)
			margin: 30px 0 50px

	&__modal
		.modal-dialog
			position: absolute
			top: 50%
			left: 50%
			transform: translate(-50%, -50%) !important
			margin: 0
			width: 700px

		.modal-content
			border-radius: 10px
			border: none
			padding: 50px

		.modal-header
			border: none
			padding: 0
			margin-bottom: 30px

			& .close
				cursor: pointer
				font-size: 42px
				font-weight: 400
				outline: none
				transition: .3s

		&-title
			color: #fff
			margin-bottom: 0
			font-size: 30px
			font-weight: 300
			line-height: 36px

		&-input
			display: block
			height: 55px
			width: 100%
			border-radius: 8px
			border: none
			margin-top: 15px
			padding-left: 20px
			padding-right: 20px
			background-color: #e1e1e1

		.modal-body
			padding: 0

			label
				font-weight: 400
				color: red
				margin-top: 10px

		.modal-footer
			border: none
			padding: 0
		
	&__btn
		padding: 14px 60px
		border-radius: 8px
		border: none
		background-color: #e1e1e1
		font-size: 26px
		cursor: pointer
		transition: .3s
		margin-top: 15px

		a
			color: #949494
			font-weight: 300

		&:hover
			background: #11bdbd

			a
				color: #fff

	.border-error
		border: 1px solid red

	@media screen and (min-width: 992px)
		&__item
			&:hover
				color: #13416a
				font-weight: 600

				&:before
					background: url(../../../public/img/icon-note-blue.png) no-repeat center center

				&:after
					content: ''
					position: absolute
					top: 50%
					right: 40px
					transform: translateY(-50%)
					background: url(../../../public/img/arrow-blue.png) no-repeat center center
					background-size: 100%
					height: 20px
					width: 20px
					display: block
					cursor: pointer

	@media screen and (min-width: 768px) and (max-width: 991px)
		.masthead-wrapper p
			font-size: 60px
			text-align: center

		&__content
			padding: 0

			&--item-title
				padding: 30px

		&__item
			padding: 0 30px !important

		&__description
			&:first-child
				margin: 40px 0 20px

			&:nth-child(2)
				margin: 20px 0 40px

	@media screen and (max-width: 767px)
		.masthead-wrapper p
			font-size: 36px
			height: 154px
			line-height: 154px
			text-align: center

		&__description
			&:first-child
				margin: 25px 0 15px

			&:nth-child(2)
				margin: 15px 0 25px

		&__detail
			margin: 0

		&__content
			padding: 0

			&--item
				width: 100%
				padding: 0

				&-title
					padding-left: 20px
					padding-right: 20px
					margin-left: -20px
					margin-right: -20px

				&-detail
					ul li
						padding: 0

		&__modal
			.modal-dialog
				height: 100vh
				width: 100%

			.modal-content
				border-radius: 0
				padding: 50px 20px 20px
				height: 100%

			.modal-header
				margin-bottom: 30px

				& .close
					font-size: 36px

			&-title
				font-size: 26px
				line-height: 32px

			&-input
				border-radius: 6px
				margin-top: 12px
			
		&__btn
			padding: 15px
			border-radius: 6px
			font-size: 26px
			margin-top: 12px
			width: 50%

	@media screen and (max-width: 479px)
		&__btn
			width: 100%