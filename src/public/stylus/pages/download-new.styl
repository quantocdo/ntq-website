@import '../main'

.download
	& .masthead-wrapper
		& p
			color: #fff
			font-size: 72px
			line-height: 255px
			margin: 0

	&__detail
		display: flex
		flex-wrap: wrap

	&__item
		&-content
			width: 85%
			display: inline-flex
	
	&__content
		padding-left: 60px
		padding-right: 60px

		&--item
			&-title
				height: 115px
				display: flex
				align-items: center
				color: #fff
				padding-left: 40px
				padding-right: 40px

				h3
					font-weight: 400
					font-size: 20px
					letter-spacing: 1.2px

			&-detail
				ul
					margin-top: 30px
					margin-bottom: 30px
					list-style: inside url(../../../public/img/icon-note.png)

					li
						padding: 0 40px
						margin: 20px 0
						font-size: 16px
						cursor: pointer
						position: relative

						&:hover
							color: #13416a
							font-weight: 700

							&.download__item
								&:after
									content: ''
									position: absolute
									top: 50%
									right: 40px
									transform: translateY(-50%)
									background: url(../../../public/img/arrow-blue.png) no-repeat center center
									background-size: 100%
									height: 20px
									width: 20px
									display: block
									cursor: pointer

							& .download__item-content
								width: 85%
								display: inline-flex

	&__description
		color: #13416a
		font-size: 18px

		&:first-child
			margin: 50px 0 30px

		&:nth-child(2)
			margin: 30px 0 50px

	.modal-dialog
		top: 20%

	&__modal
		&-title
			color: #fff
			margin-bottom: 0
			font-size: 30px

		&-input
			display: block
			height: 55px
			width: 100%
			border-radius: 5px
			border: none
			margin-top: 15px
			padding-left: 20px
			padding-right: 20px
			background-color: #e1e1e1

		.modal-body
			padding-left: 30px
			padding-right: 30px
			padding-bottom: 15px

	.modal-footer
		padding-left: 30px
		padding-right: 30px
		padding-top: 0
		padding-bottom: 40px
		border: none

	.modal-body
		label
			font-weight: 400
			color: red
			margin-top: 10px

	&__btn
		padding: 15px 60px
		border-radius: 5px
		border: none
		color: #949494
		font-size: 20px
		cursor: pointer

		&:hover
			background: #11bdbd
			color: #fff

	.modal-header
		border: none
		padding-left: 30px
		padding-right: 30px

		& .close
			padding: 0
			cursor: pointer
			background: 0 0
			border: 0
			float: right
			opacity: 0.5
			font-size: 36px

	.border-error
		border: 1px solid red

	@media screen and (max-width: 767px)
		&__content
			padding: 0

			&--item
				padding: 0

				&-title
					padding-left: 20px
					padding-right: 20px

				&-detail
					ul li
						padding-left: 20px
						padding-right: 20px

		&__modal
			z-index: 9999

			.modal-body
				padding-left: 10px
				padding-right: 10px

			&-title
				font-size: 26px
				margin-top: 60px

		&__btn
			width: 100%

		.modal-header
			padding-left: 10px
			padding-right: 10px

		.modal-footer
			padding-top: 25px
			padding-left: 10px
			padding-right: 10px

		.modal-dialog
			top: 0
			margin: 0
			height: 100vh

		.modal-content
			border-radius: 0
			height: 100%