@import '../main'

.site-content
  background $color_white
  padding-top 30px
  padding-bottom 100px

  .posts
    display: grid
    grid-gap: 20px

    .post
      overflow: hidden
      grid-row-end: span 10
      border-radius: 4px
      border: 1px solid $color_gray

      .content
        display: block
        line-height: 1.5em

        .feature-image
          img
            max-width: 100%

        .title
          padding: 20px 20px 0
          font-size: 18px
          font-weight: bold

        .publish-date
          padding: 0 20px 20px
          font-size: 12px
          color: $color_gray_dark

        .truncated
          padding: 0 20px 20px

  .pagination
    padding-top: 30px

    .prev, .next
      border: 1px solid $color_gray
      border-radius: 50%
      display: block
      size: 34px
      line-height: 34px
      text-align: center

    .prev
      float: left

    .next
      float: right

  @media screen and (min-width: 768px)
    .posts
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr))
      grid-auto-rows: 20px
