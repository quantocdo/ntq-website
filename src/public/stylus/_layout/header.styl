.header
  padding: 20px 0
  background-color: #fff
  border-bottom: 1px solid #128c87
  font-family: kozukaGothicRegular
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 9999
  transition: .2s

.header__content
  margin-bottom: 0 !important
  border: none

  .navbar-collapse
    padding-right: 0

.header__logo
  line-height: 10px

  img
    width: 100%
    height: 100%

.header__logo-mobile
  display: none

.header__nav
  float: right

  li
    a
      text-decoration: none
      font-size: 16px
      color: #2a75b9
      text-transform: uppercase
      padding: 0 15px
      height: 70px
      line-height: 70px

      &:hover
        color: #003663 !important
        background-color: transparent !important

    &.dropdown:not(.header__language)
      .dropdown-menu
        a
          color: #1668b2
          height: 40px
          line-height: 40px
          text-transform: initial

    &.open
      a
        background-color: transparent

        &:hover, &:focus
          background-color: transparent

.header__language
  .dropdown-toggle
    .caret
      &.icon-dropdown
        display: inline-block
        color: #1668b2

  img
    margin-right: 10px

.header__language-item
  display: flex
  align-items: center
  padding-right: 0

.header__language-text
  margin-right: 10px
  color: #1668b2
  font-size: 12px

.header__language-english
  font-size: 12px

.header__language-select
  background-color: transparent

  a
    height: 32px
    line-height: 32px

    img
      width: 38px
      height: 22px

  .navbar-nav > li > .dropdown-menu
    padding: 13px 25px
    border-radius: 8px
    top: 60px
    left: 50%
    transform: translateX(-50%)
    box-shadow: 0px 2px 6.72px 0.28px rgba(15, 15, 15, 0.44)

    .caret
      color: #1668b2
      margin-right: 10px
      transform: rotate(-90deg)
      border-right: 5px solid transparent
      border-left: 5px solid transparent
      border-top: 5px dashed
      margin-bottom: 5px

    li
      a
        padding: 0
        padding-bottom: 20px
        margin-top: 0

    &:before
      content: ''
      position: absolute
      top: -6px
      left: 50%
      transform: translate(-50%) rotate(45deg)
      width: 13px
      height: 13px
      background-color: #fff
      box-shadow: -1px -1px 1px rgba(15, 15, 15, 0.44)

    &.header__language-select
      padding: 0
      box-shadow: none
      border: none
      left: 2px
      transform: none

      &:before
        content: none

      .header__language-item
        margin-top: -7px

  .dropdown-toggle
    .caret
      display: none

  .dropdown-backdrop
    display: none

.disable-scroll
  overflow: hidden

.bg-transparent
  background-color: transparent
  border-bottom: 1px solid #464646

  .header__nav
    li
      a
        color: #fff

    .header__language
      .caret
        color: #fff !important

  .header__language-text
    color: #fff