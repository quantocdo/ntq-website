.footer
  background-color: #252525
  padding-top: 30px

  li
    list-style-type: none

  &__link
    position: relative

    &::after
      content: ''
      display: block
      clear: both

    &-link
      float: right
      text-transform: uppercase

      li
        float: left
        padding: 15px

        a
          color: #fff
          line-height: 20px
          font-size: 15px

        &:last-child
          padding-right: 0

    &-home
      color: #fff
      position: absolute
      top: 50%
      transform: translateY(-50%)
      text-transform: uppercase
      font-size: 24px

  &__contact
    border-bottom: 1px solid #423535
    margin-top: 30px

    &-title
      color: #fff
      text-transform: uppercase
      font-size: 30px

    &--padding
      padding-top: 20px

  &__item
    padding-top: 20px
    padding-bottom: 30px
    height: 160px
    line-height: 22px
    padding-left: 75px

    &-title
      color: #16beb9
      font-size: 18px
      margin-bottom: 10px
      font-weight: 600

    &-address
      color: #fff
      font-size: 14px
      padding: 5px 0

    &-contact
      color: #fff
      font-size: 14px

  &__contact
    border-bottom: 1px solid #363636

    &--padding
      padding: 20px 0

  &__container
    display: grid
    grid-template-columns: 50% 50%
    align-items: center
    padding: 40px 0

  &__copyright
    display: block
    color: #fff
    font-size: 12px
    margin-top: 5px

  &__socials
    text-align: right

    a
      padding: 0 20px

  @media screen and (max-width: 767px)
    &__mobile
      &-dropdown
        color: #fff
        font-size: 24px
        text-transform: uppercase

        .caret
          border-right: 8px solid transparent
          border-left: 8px solid transparent
          border-top: 8px dashed
          margin-top: -4px
          margin-left: 10px

      &-link
        text-transform: uppercase

    &__contact
      margin-top: 20px

      &-title
        font-size: 25px

    &__item
      padding: 15px 15px
      height: auto

    &__container
      display: block

      &-logo
        text-align: center

    &__socials
      text-align: center

    &__copyright
      margin-top: 20px
      margin-bottom: 24px
      font-size: 16px

  @media screen and (min-width: 768px) and (max-width: 991px)
    &__link
      &-link
        li
          float: left
          padding: 0 4px

          a
            color: #fff
            line-height: 20px

    &__item
      height: 190px
      padding-left: 65px