html, body
  width: 100%
  height: 100%
  margin: 0 auto
  position: relative

main
  margin-top: 111px

*
  box-sizing: border-box
  font-family: Raleway !important

a
  text-decoration: none
  transition: .3s
  color: #003663

  &:hover
    text-decoration: none

p
  line-height: 26px

ul
  padding: 0
  margin: 0

table
  max-width: 100% !important
  overflow: auto
  display: block
  border: none

.modal-open
  padding-right: 0 !important
  overflow: hidden

.bg-gradient
  background-image: linear-gradient(to right, #11bdbd, #b0e04e 85%)

.masthead
  width: 100%
  height: 254px
  color: #fff
  text-transform: uppercase
  font-weight: 700
  line-height: 254px

.btn
  display: inline-block
  background-image: linear-gradient(to right, #11bdbd, #b0e04e 85%)
  font-size: 24px
  padding: 13px 13px 10px
  text-align: center
  color: #fff
  text-decoration: none
  text-transform: uppercase
  border: none
  outline: none
  text-shadow: 0 0 1px rgba(#128c87, 0.3)

  &--japan
    letter-spacing: 1.5px
  

  &--square
    border-radius: 12px

  &--circle
    border-radius: 50px

  &:hover
    color: #003663

.list-square
  list-style-type: square

.list-number
  list-style: none
  counter-reset: number

  li
    margin-left: 80px
    position: relative

    &:before
      counter-increment: number
      content: counter(number, decimal-leading-zero)
      font-size: 30px
      color: #fff
      background-image: linear-gradient(to right, #11bdbd, #b0e04e 85%)
      border-radius: 50%
      display: inline-block
      padding: 1px 13px 3px
      line-height: 56px
      margin-top: 6px
      margin-left: -80px
      margin-right: 20px
      position: absolute
      top: 43%
      transform: translateY(-50%)

  &-smaller
    li
      &:before
        font-size: 24px
        padding: 9px 10.5px

.equal-height
  display: flex
  flex-wrap: wrap

.bg-blue
  background-color: #52c5d0 !important

.bg-red
  background-color: #f16365 !important

.bg-orange
  background-color: #fbc03e !important

.bg-violet
  background-color: #a48d9b !important

.square
  &:before
    content: ''
    width: 17px
    height: 17px
    margin-right: 15px
    display: inline-block
    vertical-align: -1px

  &-blue
    color: #52c5d0 !important

    &:before
      background-color: #52c5d0

  &-red
    color: #f16365 !important

    &:before
      background-color: #f16365

  &-orange
    color: #fbc03e !important

    &:before
      background-color: #fbc03e

  &-violet
    color: #a48d9b !important

    &:before
      background-color: #a48d9b    

@media screen and (max-width: 991px)
  .btn
    padding: 12px 12px 10px
    font-size: 20px

@media screen and (max-width: 767px)
  .site-content
    margin-top: 82px !important

  .masthead
    height: 154px
    line-height: 154px
  

